- registered_vessel = @submission.registered_vessel || Register::Vessel.new

%table.table.table-striped.table-fluid.submission-vessel
  %thead
    %th Vessel Details

    - if @submission.registered_vessel
      %th Current Information

    %th Submitted Information
  %tbody
    %tr
      %td{width: "30%"} Vessel Name

      - if @submission.registered_vessel
        %td#registry-vessel-name{width: "30%"}= registered_vessel.name

      %td#vessel-name
        %strong
          - if @readonly
            = vessel.name
          - else
            = compare_reg_info vessel.name, registered_vessel.name
          .i.fa.fa-star-o.hidden
        .pull-right
          = vessel.alt_names.join(', ')
    %tr
      %td Hull Identification Number (HIN)

      - if @submission.registered_vessel
        %td= registered_vessel.hin

      %td#vessel-hin
        %strong
          - if @readonly
            = vessel.hin
          - else
            = compare_reg_info vessel.hin, registered_vessel.hin
          .i.fa.fa-star-o.hidden
    %tr
      %td Make and model

      - if @submission.registered_vessel
        %td= registered_vessel.make_and_model

      %td#vessel-make_and_model
        %strong
          - if @readonly
            = vessel.make_and_model
          - else
            = compare_reg_info vessel.make_and_model, registered_vessel.make_and_model
    %tr
      %td Length

      - if @submission.registered_vessel
        %td= registered_vessel.length_in_meters

      %td#vessel-length_in_meters
        %strong
          - if @readonly
            = vessel.length_in_meters
          - else
          = compare_reg_info vessel.length_in_meters, registered_vessel.length_in_meters
    %tr
      %td Number of hulls

      - if @submission.registered_vessel
        %td= registered_vessel.number_of_hulls

      %td#vessel-number_of_hulls
        %strong
          - if @readonly
            = vessel.number_of_hulls
          - else
            = compare_reg_info vessel.number_of_hulls, registered_vessel.number_of_hulls
    %tr
      %td Vessel type

      - if @submission.registered_vessel
        %td= registered_vessel.vessel_type

      %td#vessel-vessel_type
        %strong
          - if @readonly
            = vessel.vessel_type
          - else
            = compare_reg_info vessel.vessel_type, registered_vessel.vessel_type
    %tr
      %td Vessel type (other)

      - if @submission.registered_vessel
        %td n/a

      %td#vessel-vessel_type_other
        %strong

          - if @readonly
            = vessel.vessel_type_other
          - else
            = compare_reg_info vessel.vessel_type_other, registered_vessel.vessel_type
    %tr
      %td MMSI Number

      - if @submission.registered_vessel
        %td= registered_vessel.mmsi_number

      %td#vessel-mmsi_number
        %strong
          - if @readonly
            = vessel.mmsi_number
          - else
            = compare_reg_info vessel.mmsi_number, registered_vessel.mmsi_number
          .i.fa.fa-star-o.hidden
    %tr
      %td Radio Call Sign

      - if @submission.registered_vessel
        %td= registered_vessel.radio_call_sign

      %td#vessel-radio_call_sign
        %strong
          - if @readonly
            = vessel.radio_call_sign
          - else
            = compare_reg_info vessel.radio_call_sign, registered_vessel.radio_call_sign
          .i.fa.fa-star-o.hidden
    %tr
      %td Autonomous Vessel

      - if @submission.registered_vessel
        %td= y_n(registered_vessel.autonomous_vessel)

      %td#vessel-autonomous_vessel
        %strong
          - if @readonly
            = y_n(vessel.autonomous_vessel)
          - else
            = compare_reg_info (y_n(vessel.autonomous_vessel || false)), y_n(registered_vessel.autonomous_vessel)
          .i.fa.fa-star-o.hidden
