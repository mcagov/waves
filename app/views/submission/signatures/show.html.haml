= render partial: "submissions/info/breadcrumbs", locals: { submission: @submission }
= render partial: "submissions/info/heading", locals: { submission: @submission }

= simple_form_for @submission, url: submission_signature_path, method: :patch do |f|
  .x_panel
    .x_content
      .row
        .col-md-3
          = f.input :part, collection: Activity::PART_TYPES, as: :select, include_blank: false, input_html: { class: "select2 select2_single" }
        .col-md-3
          = f.input :application_type, collection: current_activity.application_types, as: :select, include_blank: false, input_html: { class: "select2 select2_single" }
        .col-md-3
          = f.input :vessel_reg_no
  .row.no-print
    .col-md-12
      = button_tag(type: 'submit', class: "btn btn-primary btn-lg pull-right") do
        Save
