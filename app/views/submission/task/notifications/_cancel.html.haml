= simple_form_for Notification.new, url: cancel_submission_task_notification_path(submission, task) do |f|
  .modal-header
    %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
      %span{"aria-hidden" => "true"} Ã—
    %h4.modal-title Cancel Task
  .modal-body
    .row
      .col-sm-12
        .form-group
          = f.input :subject, as: :select, label: "Reason for cancelling task",
            collection: Notification::Cancellation::REASONS,
            include_blank: false
    .row
      .col-sm-12
        .form-group
          = render partial: "shared/fields/message_editor",
            locals: { f: f, message_type: :cancel }
    .row
      .col-md-12
        - if submission.applicant_name.present?
          .form-group
            %label
              %input{name: "send_email", value: "application_receipt", type: "checkbox", checked: true}
              Send a cancellation email to #{submission.applicant_description}
        - else
          %p.red A cancellation email cannot be sent without an Email Recipient
  .modal-footer
    = f.submit "Cancel Task", class: "btn btn-lg btn-info"
