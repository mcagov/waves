- if task.initialising?
  = link_to submission_task_path(@submission, task),
    class: 'btn-link',
    method: :delete,
    data: { confirm: "Are you sure you want to remove this task?" },
    style: 'color: red;' do
    %i.fa.fa-trash
    Remove
- elsif task.claimed?
  = "Claimed by #{task.claimant}"
- elsif task.unclaimed?
  = form_tag claim_submission_task_path(@submission, task) do
    = submit_tag "Claim", class: "btn btn-primary btn-xs"

- else
  = task.current_state.to_s.humanize
