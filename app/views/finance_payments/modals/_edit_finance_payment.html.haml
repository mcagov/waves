.modal.fade{id: "edit-finance-payment", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title
          Edit Documents Received
      = simple_form_for @finance_payment,
        url: finance_payment_path(@finance_payment),
        method: :put,
        remote: true do |f|
        .modal-body
          .row
            .col-sm-12
              = f.input :documents_received

        .modal-footer
          = f.submit "Save", class: "btn btn-primary"
