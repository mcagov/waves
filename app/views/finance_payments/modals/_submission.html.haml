.modal.fade{id: "link-application", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h4.modal-title
          Search for an Application

      .modal-body
        .row
          .col-sm-6
            = form_tag "/search/submissions", method: :get, remote: true do
              = hidden_field_tag :response_path, "/finance_payments/search_results/submissions"
              = render partial: "search/fields"

        = simple_form_for @finance_payment.payment,
          url: finance_payment_payment_path(@finance_payment, @finance_payment.payment),
          method: :put do |f|
          = hidden_field_tag "payment[submission_id]"
          #submissions
