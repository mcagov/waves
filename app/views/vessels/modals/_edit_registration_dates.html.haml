.modal.fade{id: "edit-registration-dates", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-md
    .modal-content
      = simple_form_for @vessel.current_registration,
                        url:  vessel_current_registration_path(@vessel),
                        method: :patch do |f|
        .modal-header
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
          %h4.modal-title Edit Registration Dates (System Manager only)
        .modal-body
          = f.input :registered_at,
                    as: :string,
                    label: "Registration Date",
                    input_html: { class: "datetimepicker" }

          = f.input :registered_until,
                    as: :string,
                    label: "Registration Expiry Date",
                    input_html: { class: "datepicker" }

        .modal-footer
          = button_to "Cancel", "#", class: "btn btn-danger", "data-dismiss" => "modal"
          = f.submit "Save", class: "btn btn-success submit_edit_registration_dates"
