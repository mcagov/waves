%table.table.table-striped.table-hover
  %thead
    %tr
      %th Application ID
      %th Job Type
      %th Date Received
      %th Date Closed
  %tbody
    - vessel.submissions.each do |submission|
      %tr
        %td= link_to submission.ref_no, submission_path(submission)
        %td= link_to submission.job_type, submission_path(submission)
        %td= submission.received_at
        %td= submission.closed_at
