- submission = Decorators::Submission.new(submission)
%tr.submission
  %td
    = link_to submission_path(submission), class: "search-result" do
      = submission.vessel_name
    %span.pull-right
      .label.label-primary
        APPLICATION
      %br
      = Activity.new(submission.part)
      %br
      = ApplicationType.new(submission.application_type).description
    %br

    Application Reference: #{submission.ref_no},
    Official No: #{submission.vessel_reg_no || "UNKNOWN"},
    Callsign: #{submission.radio_call_sign},
    MMSI: #{submission.mmsi_number}
