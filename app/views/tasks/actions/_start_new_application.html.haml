= link_to "#start-new-application",
  data: { target: "#start-new-application", toggle: "modal" },
  class: 'btn btn-success' do
  %i.fa.fa-plus{style: 'font-size: 1.2em; font-weight: bold;'}
  Document Entry

.modal.fade{id: "start-new-application", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4.modal-title Document Entry
      .modal-body
        %p= link_to "New Registration", new_submission_path,
            class: "btn btn-block btn-success"
        %p= link_to "Application for a Registered Vessel", "#search-for-vessel",
            data: { dismiss: "modal", toggle: "modal", target: "#search-for-vessel" },
            class: 'btn btn-block btn-warning'
        %hr
        %p= link_to "Search for Open Application", "#search-for-submission",
            data: { dismiss: "modal", toggle: "modal", target: "#search-for-submission" },
            class: 'btn btn-block btn-info'


.modal.fade{id: "search-for-vessel", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4.modal-title Search for a Vessel
      .modal-body
        .row
          .col-sm-6
            = form_tag "/search/vessels", method: :get, remote: true do
              = hidden_field_tag :response_path, "/tasks/search_results/vessels"
              = render partial: "search/fields"
        #vessels

.modal.fade{id: "search-for-submission", role: "dialog", tabindex: "-1"}
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
        %h4.modal-title Search for Open Application
      .modal-body
        .row
          .col-sm-6
            = form_tag "/search/submissions", method: :get, remote: true do
              = hidden_field_tag :response_path, "/tasks/search_results/submissions"
              = render partial: "search/fields"
        #submissions
      .modal-footer
        %a.btn.btn-default.pull-left{"data-dismiss" => "modal", "data-target" => "#start-new-application", "data-toggle" => "modal", :href => "#start-new-application"} Back to Document Entry
